@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix http: <http://www.w3.org/2011/http#> .
@prefix : <#> .

<> a owl:Ontology ;
   dc:title "Minimal Solid Dataspace Server API" ;
   owl:versionInfo "0.1.0 (Waischenfeld)" ;
   rdfs:seeAlso :hostname , :mac , :obs .

:hostname http:requests :CREATE-PUT-hostname-201 , :GET-hostname-200, :DELETE-hostname-200 ;
	  rdfs:label "Hosts" ;
	  rdfs:comment "The collection resource for hosts identified via hostname." .

:mac http:requests :CREATE-PUT-mac-201 , :READ-mac-200 , :DELETE-mac-200 ;
     rdfs:label "RuuviTag Sensors" ;
     rdfs:comment "The collection resource for RuuviTag sensor nodes identified via MAC address." .

:obs http:requests :GET-accel-x-200, :GET-accel-y-200 , :GET-accel-z-200 , :GET-humidity-200 , :GET-pressure-200 , :GET-temperature-200 ;
     rdfs:label "Sensor Observations" ;
     rdfs:comment "The sensor observations by date (@@@fix) in SOSA/SSN vocabulary." .

:CREATE-PUT-hostname-201
	rdfs:label "Create /msds/{hostname}/ collection resource" ;
	http:method "PUT" ;
	http:absolutePath "/msds/{hostname}/" ;
	http:resp [ http:statusCodeNumber 201 ] .

:GET-hostname-200
	rdfs:label "Retrieve information about /msds/{hostname}/" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:DELETE-hostname-200
	rdfs:label "Delete /msds/{hostname}/ and subordinate resources" ;
	http:method "DELETE" ;
	http:absolutePath "/msds/{hostname}/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:CREATE-PUT-mac-201
	rdfs:label "Create /msds/{hostname}/{mac}/ collection resource" ;
	http:method "PUT" ;
	http:absolutePath "/msds/{hostname}/{mac}/" ;
	http:resp [ http:statusCodeNumber 201 ] .

:READ-mac-200
	rdfs:label "Retrieve information about /msds/{hostname}/{mac}/" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:DELETE-mac-200
	rdfs:label "Delete /msds/{hostname}/{mac}/ and subordinate resources" ;
	http:method "DELETE" ;
	http:absolutePath "/msds/{hostname}/{mac}/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:GET-accel-x-200
	rdfs:label "Retrieve information about /msds/{hostname}/{mac}/acceleration-x/" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/acceleration-x/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:GET-accel-y-200
	rdfs:label "Retrieve information about /msds/{hostname}/{mac}/acceleration-y/" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/acceleration-y/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:GET-accel-z-200
	rdfs:label "Retrieve information about /msds/{hostname}/{mac}/acceleration-z/" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/acceleration-z/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:GET-humidity-200
	rdfs:label "List humidity sensor data files from {mac} on {hostname}" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/humidity/" ;
	http:resp [ http:statusCodeNumber 200 ]  .

:GET-pressure-200
	rdfs:label "List atmospheric pressure sensor data files from {mac} on {hostname}" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/pressure/" ;
	http:resp [ http:statusCodeNumber 200 ] .

:GET-temperature-200
	rdfs:label "List temperature sensor data files from {mac} on {hostname}" ;
	http:method "GET" ;
	http:absolutePath "/msds/{hostname}/{mac}/temperature/" ;
	http:resp [ http:statusCodeNumber 200 ] .
